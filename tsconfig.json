{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "jsx": "react",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "types": [
            "vite/client",
            "vitest/globals",
            "@testing-library/jest-dom",
            "@types/node",
            "@types/shelljs"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ],
    "exclude": [
        "dist",
        "lib",
        "package",
        "node_modules",
        "src/stories",
        "src/**/__tests__/*",
        "src/**/examples/*"
    ],
    "references": [
        {
            "path": "./tsconfig.test.json"
        },
        {
            "path": "./tsconfig.react.json"
        },
        {
            "path": "./tsconfig.vue.json"
        }
    ]
}
